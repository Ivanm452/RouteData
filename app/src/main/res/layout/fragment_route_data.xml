<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TabHost
        android:id="@+id/rData_tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TableLayout
                    android:id="@+id/rData_tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rData_tvOutletCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rData_tvOutletCategory" />

                            <Spinner
                                android:id="@+id/rData_spinOutletCategory"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:entries="@array/outlet_category_array"
                                android:prompt="@string/outlet_category_promt" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rData_tvOutletType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rData_tvOutletType" />

                            <Spinner
                                android:id="@+id/rData_spinOutletType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/outlet_type_array"
                                android:prompt="@string/outlet_type_promt" />
                        </LinearLayout>
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/rData_tvOutletStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rData_tvOutletStatus" />

                            <Spinner
                                android:id="@+id/rData_spinnerOutletStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/outlet_status_array"
                                android:prompt="@string/outlet_status_promt" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/rData_etOutletTag"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:background="@drawable/shape_etborder"
                                android:hint="@string/rData_etOutletTag_hint"
                                android:textColorHint="@color/hint_color" />

                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/rData_etOutletName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_etborder"
                            android:hint="@string/rData_etOutletName_hint"
                            android:textColorHint="@color/hint_color" />

                        <EditText
                            android:id="@+id/rData_etOutletAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_etborder"
                            android:hint="@string/rData_etOutletAddress_hint"
                            android:textColorHint="@color/hint_color" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/rData_etOwnerName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_etborder"
                            android:hint="@string/rData_etOwnerName_hint"
                            android:textColorHint="@color/hint_color" />

                        <EditText
                            android:id="@+id/rData_etPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/shape_etborder"
                            android:hint="@string/rData_etPhone"
                            android:textColorHint="@color/hint_color"
                            android:inputType="phone"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/rData_tvOrderWeekly"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="@string/rData_tvOrderWeekly" />

                        <TextView
                            android:id="@+id/rData_tvMultipleChain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="@string/rData_tvMultipleChain" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/rData_spinnerOrderWeekly"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:entries="@array/outlet_order_weekly_array"
                            android:prompt="@string/outlet_order_weekly_promt" />

                        <Spinner
                            android:id="@+id/rData_spinnerMultipleChain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:entries="@array/outlet_multiple_chain_array"
                            android:prompt="@string/outlet_multiple_chain_promt" />
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/rData_btnSubmit"
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@color/dominant_color"
                            android:text="@string/rData_btnSubmit"
                            android:textColor="@android:color/white" />
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/rData_tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:orientation="vertical">


                    <TableLayout
                        android:id="@+id/tabla_cuerpo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#FFFFFF">

                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#ACACAC">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="S/N"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="Name"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"

                                android:text="Address"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="Phone"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        </TableRow>

                    </TableLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rData_tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#D3E7E9"
                        android:text="2015-08-07"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/dominant_color" />


                    <TableLayout
                        android:id="@+id/tabla_cuerpo2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#FFFFFF">

                        <TableRow
                            android:id="@+id/tableRow4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ACACAC">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="S/N"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#ACACAC">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="S/N"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="Name"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="Address"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"

                                android:text="Phone"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_weight=".25"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:text="Time"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        </TableRow>

                    </TableLayout>


                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>